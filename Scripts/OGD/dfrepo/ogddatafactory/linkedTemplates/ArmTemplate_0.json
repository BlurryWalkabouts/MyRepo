{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "ogddatafactory"
		},
		"AzureSQLTestDB_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSQLTestDB'"
		},
		"blobtestjelinkedservice_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'blobtestjelinkedservice'"
		},
		"Gen1_properties_typeProperties_dataLakeStoreUri": {
			"type": "string",
			"defaultValue": "https://ogdwdev.azuredatalakestore.net/webhdfs/v1"
		},
		"Gen1_properties_typeProperties_tenant": {
			"type": "string",
			"defaultValue": "afca0a52-882c-4fa8-b71d-f6db2e36058b"
		},
		"Gen1_properties_typeProperties_subscriptionId": {
			"type": "string",
			"defaultValue": "03d914ad-63f7-4fab-b24e-7b56e7da5a56"
		},
		"Gen1_properties_typeProperties_resourceGroupName": {
			"type": "string",
			"defaultValue": "OGD-EUW-RGR-PRD-BIR-RAP-01"
		},
		"BlobDataset_properties_typeProperties_fileName": {
			"type": "string",
			"defaultValue": ""
		},
		"BlobDataset_properties_typeProperties_folderPath": {
			"type": "string",
			"defaultValue": "adf-data"
		},
		"Gen1DestinationFolder_properties_typeProperties_fileName": {
			"type": "string",
			"defaultValue": ""
		},
		"Gen1DestinationFolder_properties_typeProperties_folderPath": {
			"type": "string",
			"defaultValue": "TestFolder"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/AzureSQLTestDB')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"connectionString": "[parameters('AzureSQLTestDB_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/Gen1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureDataLakeStore",
				"typeProperties": {
					"dataLakeStoreUri": "[parameters('Gen1_properties_typeProperties_dataLakeStoreUri')]",
					"tenant": "[parameters('Gen1_properties_typeProperties_tenant')]",
					"subscriptionId": "[parameters('Gen1_properties_typeProperties_subscriptionId')]",
					"resourceGroupName": "[parameters('Gen1_properties_typeProperties_resourceGroupName')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/blobtestjelinkedservice')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": "[parameters('blobtestjelinkedservice_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureSQLTable')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureSQLTestDB",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"structure": [
					{
						"name": "tdate",
						"type": "DateTime"
					},
					{
						"name": "amount",
						"type": "Decimal"
					}
				],
				"typeProperties": {
					"tableName": "[concat('[', 'dbo].[transactions]')]"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/AzureSQLTestDB')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/BlobDataset')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "blobtestjelinkedservice",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureBlob",
				"structure": [
					{
						"name": "tdate",
						"type": "DateTime"
					},
					{
						"name": "amount",
						"type": "Double"
					}
				],
				"typeProperties": {
					"format": {
						"type": "TextFormat",
						"columnDelimiter": ",",
						"rowDelimiter": "",
						"quoteChar": "\"",
						"nullValue": "\\N",
						"encodingName": null,
						"treatEmptyAsNull": true,
						"skipLineCount": 0,
						"firstRowAsHeader": true
					},
					"fileName": "[parameters('BlobDataset_properties_typeProperties_fileName')]",
					"folderPath": "[parameters('BlobDataset_properties_typeProperties_folderPath')]"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/blobtestjelinkedservice')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/Gen1DestinationFolder')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "Gen1",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureDataLakeStoreFile",
				"typeProperties": {
					"format": {
						"type": "TextFormat",
						"columnDelimiter": ",",
						"rowDelimiter": "",
						"nullValue": "\\N",
						"treatEmptyAsNull": true,
						"skipLineCount": 0,
						"firstRowAsHeader": false
					},
					"fileName": "[parameters('Gen1DestinationFolder_properties_typeProperties_fileName')]",
					"folderPath": "[parameters('Gen1DestinationFolder_properties_typeProperties_folderPath')]"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/Gen1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/BlobToAzureSQLDB')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "CopyBlobToAzureSQLDB",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "adf-data/"
							},
							{
								"name": "Destination",
								"value": "[concat('[', 'dbo].[transactions]')]"
							}
						],
						"typeProperties": {
							"source": {
								"type": "BlobSource",
								"recursive": false
							},
							"sink": {
								"type": "SqlSink",
								"writeBatchSize": 10000,
								"preCopyScript": "TRUNCATE TABLE dbo.transactions"
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"columnMappings": {
									"tdate": "tdate",
									"amount": "amount"
								}
							}
						},
						"inputs": [
							{
								"referenceName": "BlobDataset",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
							{
								"referenceName": "AzureSQLTable",
								"type": "DatasetReference",
								"parameters": {}
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/BlobDataset')]",
				"[concat(variables('factoryId'), '/datasets/AzureSQLTable')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/BlobToGen1')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "CopyBlobToGen1",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "adf-data/"
							},
							{
								"name": "Destination",
								"value": "TestFolder/"
							}
						],
						"typeProperties": {
							"source": {
								"type": "BlobSource",
								"recursive": true
							},
							"sink": {
								"type": "AzureDataLakeStoreSink",
								"copyBehavior": "FlattenHierarchy"
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "BlobDataset",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
							{
								"referenceName": "Gen1DestinationFolder",
								"type": "DatasetReference",
								"parameters": {}
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/BlobDataset')]",
				"[concat(variables('factoryId'), '/datasets/Gen1DestinationFolder')]"
			]
		}
	]
}